@using ASPuygulama.Models
@model List<User>

@{
    ViewBag.Title = "Index";
    

    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
}

<h4 class="btn btn-outline-dark">
    <a class="text-decoration-none" href="~/Users/Create">Make a New User</a>
</h4>
<table class="table">
    <tr>
        <th>
           Image
        </th>
        <th>
           Name
        </th>
        <th>
            Email
        </th>
        <th>
          SignDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.Image " />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SignDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
