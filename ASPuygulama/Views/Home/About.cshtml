                        <p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered fore alteration in some form, by injected humour</p>
                   
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--== End About Area Wrapper ==-->


    <!--== Start Brand Logo Area ==-->
    <div class="brand-logo-area brand-logo-default-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="brand-logo-slider-content swiper-nav-style2">
                        <div class="swiper-container brand-logo-slider-container">
                            <div class="swiper-wrapper brand-logo-slider d-flex justify-content-between">
                                <div class="swiper-slide brand-logo-item">
                                    <img src="~/Content/images/brand-logo/1.jpg" alt="Brand-Logo" width="186" height="92">
                                </div>
                                <div class="swiper-slide brand-logo-item">
                                    <img src="~/Content/images/brand-logo/2.jpg" alt="Brand-Logo" width="186" height="92">
                                </div>
                                <div class="swiper-slide brand-logo-item">
                                    <img src="~/Content/images/brand-logo/3.jpg" alt="Brand-Logo" width="186" height="92">
                                </div>
                                <div class="swiper-slide brand-logo-item">
                                    <img src="~/Content/images/brand-logo/4.jpg" alt="Brand-Logo" width="186" height="92">
                                </div>
                                <div class="swiper-slide brand-logo-item">
                                    <img src="~/Content/images//brand-logo/5.jpg" alt="Brand-Logo" width="186" height="92">
                                </div>
                            </div>
                        </div>
                        <!-- Add Arrows -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--== End Brand Logo Area ==-->
</main>


