
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <!--== Start Page Title Area ==-->

    <!--== Start About Area Wrapper ==-->
    <section class="about-area">
        <div class="container">
            <div class="row align-items-lg-center">
                <div class="col-lg-6 col-md-5">
                    <div class="about-thumb effect-animate-flash">
                        <img src="~/Content/images/photos/1.jpg" alt="Image" width="500" height="700">
                    </div>
                </div>
                <div class="col-lg-6 col-md-7 fs-2 d-flex flex-column gap-5" >
                    <div>
                        <h1 class="fs-1 fw-bold">About</h1>
                    </div>
                    <div class="about-content">
                        <h4 class="title-underline"><span class="fs-1">It is a long established fact that a reader will be distracted readable</span></h4>
                        <h4 class="title">The standard chunk Lorem used since the is reproduced below for those interested.</h4>
